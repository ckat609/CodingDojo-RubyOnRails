<div class="container">
    <h1>Dojo list</h1>

    <% if flash[:success] %>
        <h6 class="alert alert-success">
            <ul>
                <li><%= flash[:success] %></li>
            </ul>
        </h6>
    <% end %>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Branch</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        <% @dojos.each do |dojo|%>
            <tr>
                <td><%= dojo.branch %></td>
                <td><%= dojo.street %></td>
                <td><%= dojo.city %></td>
                <td><%= dojo.state %></td>
                <td><a href="/dojos/<%= dojo.id %>">Show</a> | <a href="/dojos/<%= dojo.id %>/edit">Edit</a> | 
                <form action="/dojos/<%= dojo.id %>" method="POST"  class="aButton">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="submit" value="Destroy" class="aButton">
                </form>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>

    <a href="/dojos/new" class="btn btn-primary">New Dojo</a>
</div>