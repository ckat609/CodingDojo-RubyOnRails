<div class="container">
    <div class="jumbotron">
        <h1 class="display-4"><%= @aStudent.dojo.branch %>: <%= @aStudent.first_name %> <%= @aStudent.last_name %>'s cohort</h1>
        <h3>Email: <%= @aStudent.email %></h3>
        <hr class="my-4">
        <td><a href="/dojos/<%= @aStudent.dojo.id %>/students/<%= @aStudent.id %>/edit">Edit</a> | Destroy</td>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% @aStudent.dojo.students.each do |student| %>
                <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <a href="/" class="btn btn-primary">Home</a>
    <a href="/dojos/<%= @aStudent.dojo.id %>" class="btn btn-primary">Back</a>
</div>