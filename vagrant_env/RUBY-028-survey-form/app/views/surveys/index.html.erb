<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">A survey</h1>
        <p class="lead">This is a simple survey.</p>
        <hr class="my-4">
        <form action="/surveys/create" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <div class="form-group">
                <label for="survey[first_name]">First name</label>
                <input type="text" class="form-control" name="survey[first_name]" aria-describedby="emailHelp">
                <label for="survey[last_name]">Last name</label>
                <input type="text" class="form-control" name="survey[last_name]" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="survey[dojot">Dojo</label>
                <select class="form-control" id="survey[dojo]" name="survey[dojo]">
                    <% @dojos.each do |dojo| %>
                    <option value="<%= dojo.id %>"><%= dojo.name %></option>
                    <% end %>
                </select>
            </div>
            <div class="form-group">
                <label for="survey[language]">Language</label>
                <select class="form-control" id="survey[language]" name="survey[language]">
                    <% @languages.each do |language| %>
                    <option value="<%= language.id %>"><%= language.name %></option>
                    <% end %>
                </select>
            </div>
            <div class="form-group">
                <label for="survey[comment]">Last name</label>
                <textarea class="form-control" name="survey[comment]" aria-describedby="emailHelp"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>