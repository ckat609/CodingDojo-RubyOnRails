<div class="row">
    <div class="col col-sm-4">
        <h2><%= @restaurant.name %></h2>
        <h6><%= @restaurant.category.name %> cuisine</h6>
        <h6><%= @restaurant.address %></h6>
        <h6><%= @restaurant.city %>, <%= @restaurant.state %> <%= @restaurant.zipcode %></h6>
        <p><%= @restaurant.description %></p>
        <% if @restaurant.user == current_user %>
            <div class="row">
                <div class="col">
                    <form action="/restaurants/<%= @restaurant.id %>" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                        <div class="form-group">
                            <a class="btn btn-outline-primary" href="/restaurants/edit/<%= @restaurant.id %>">Edit</a>
                            <input class="btn btn-outline-danger" type="submit" value="Delete">
                        </div>
                    </form>
                </div>
            </div>
        <%end%>
    </div>
    <div class="col col-sm-8">
        <iframe
            width="600"
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=<%= @API_KEY %>&q=<%= @restaurant.name %>+<%= @restaurant.address %>,<%= @restaurant.city %>+<%= @restaurant.state %>+<%= @restaurant.zipcode %>" allowfullscreen>
        </iframe>
    </div>
</div>