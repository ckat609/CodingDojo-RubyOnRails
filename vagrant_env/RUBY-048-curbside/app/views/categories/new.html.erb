
<div class="row">
    <div class="col">
        <h2>Categories</h2>
        <% if flash[:errors] %>
            <ul>
            <% flash[:errors].each do |e| %>
                <li class="alert alert-danger"><%= e %></li>
            <% end %>
            </ul>
        <% end %>
        <% if flash[:notices] %>
            <ul>
            <% flash[:notices].each do |n| %>
                <li class="alert alert-success"><%= n %></li>
            <% end %>
            </ul>
        <% end %>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col">
        <form action="/categories/create" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <div class="form-group">
                <label for="category[name]">Name</label>
                <input class="form-control" type="text" name="category[name]" id="category[name]">
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Add">
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col" class="w-25">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                        <tr>
                            <td><%= category.name %></td>
                            <td>
                                <form action="/categories/<%= category.id %>" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                                    <a class="btn btn-outline-primary" href="/categories/edit/<%= category.id %>">Edit</a>
                                    <input class="btn btn-outline-danger" type="submit" value="Delete">
                                </form>
                            </td>
                        </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>