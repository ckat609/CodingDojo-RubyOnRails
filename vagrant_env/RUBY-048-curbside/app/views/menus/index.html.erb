<div class="row">
    <div class="col">
        <h2>Menu</h2>
        <% if flash[:errors] %>
            <ul>
            <% flash[:errors].each do |e| %>
                <li class="alert alert-danger"><%= e %></li>
            <% end %>
            </ul>
        <% end %>
        <% if flash[:notices] %>
            <ul>
            <% flash[:notices].each do |n| %>
                <li class="alert alert-success"><%= n %></li>
            <% end %>
            </ul>
        <% end %>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col">
        <form action="/menus/create" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <div class="form-group">
                <label for="menu[name]">Menu name</label>
                <input class="form-control" type="text" name="menu[name]" id="menu[name]">
            </div>
            <div class="form-group">
                <label for="menu[restaurant]">Restaurant</label>
                <select class="form-control" name="menu[restaurant]" id="menu[restaurant]">
                    <%= @restaurants.each do |r|%>
                        <option value="<%= r.id %>"><%= r.name %></option>
                    <% end %>
                </select>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col">
        <form action="/dishtypes/create" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <div class="form-group">
                <label for="dishtype[name]">Name</label>
                <input class="form-control" type="text" name="dishtype[name]" id="dishtype[name]">
            </div>
            <div class="form-group">
                <label for="dishtype[menu]">Menu</label>
                <select class="form-control"  name="dishtype[menu]" id="dishtype[menu]">
                    <% current_user.restaurants.order(:name).each do |r|%>
                        <% r.menus.each do |m|%>
                            <option value="<%= m.id %>"><%= r.name %> - <%= m.name %></option>
                        <% end %>
                    <% end %>
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Add">
            </div>
        </form>
    </div>
    <div class="col">

    </div>
    <div class="col">

    </div>
</div>
